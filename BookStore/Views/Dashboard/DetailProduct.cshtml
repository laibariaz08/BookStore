@using BookStore.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <br />
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.Picture" alt="@Model.Title" class="img-fluid" style="height: 400px; width:350px;">
            </div>
            <div class="col-md-8">
                <h1>@Model.Title</h1>
                <p>@Model.genre_Name</p>
                <p style="font-size:30px;"><strong>Author:</strong> @Model.Author_name</p>
                <p>@Model.Description</p>
                <p>@Model.Price.ToString("0.00")$</p>
                <a href="/Dashboard/Dashboard" class="btn btn-secondary mt-3">Back to Books</a>
            </div>
        </div>
    </div>
</body>
</html>
