@using Microsoft.AspNetCore.Identity
@using BookStore.Models;
@inject SignInManager<UpdatedUser> SignInManager
@inject UserManager<UpdatedUser> UserManager

<ul class="navbar-nav ml-auto" style="font-size: 22px;">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">
                Hello @User.Identity?.Name!
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }

    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register" style="font-size: 22px;">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login" style="font-size: 22px;">Login</a>
        </li>
    }
</ul>
